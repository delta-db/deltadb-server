{
  "name": "deltadb-server",
  "version": "0.0.1",
  "description": "An offline-first, front-end-only database",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/delta-db/deltadb-server"
  },
  "keywords": [
    "db",
    "deltadb",
    "offline",
    "offline-first",
    "front-end-only"
  ],
  "author": "Geoffrey Cox",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/redgeoff/deltadb/issues"
  },
  "scripts": {
    "assert-beautified": "beautify-proj -i test -c beautify.json -e bundle.js && beautify-proj -i scripts -c beautify.json",
    "beautify": "beautify-proj -i test -o . -c beautify.json -e bundle.js && beautify-proj -i scripts -o . -c beautify.json",
    "jshint": "jshint -c .jshintrc *.js test scripts",
    "test-node": "istanbul test --dir coverage/node ./node_modules/mocha/bin/_mocha test/test.js",
    "test-performance": "istanbul test ./node_modules/mocha/bin/_mocha -- -g 'delta' test/performance.js",
    "test-browser": "./bin/test-browser.js",
    "test": "npm run jshint && npm run test-node",
    "test-firefox": "npm run jshint && CLIENT=selenium:firefox npm run test-browser",
    "test-chrome": "npm run jshint && CLIENT=selenium:chrome npm run test-browser",
    "test-phantomjs": "npm run jshint && CLIENT=selenium:phantomjs npm run test-browser",
    "build": "mkdir -p dist && browserify index.js -s DeltaDB -o dist/deltadb.js && npm run min",
    "min": "uglifyjs dist/deltadb.js -mc > dist/deltadb.min.js",
    "dev": "browserify test/test.js > test/test-bundle.js && npm run dev-server",
    "dev-server": "./bin/dev-server.js",
    "coverage": "mkdir -p coverage/node && npm test --coverage && istanbul check-coverage --lines 100 --function 100 --statements 100 --branches 100 coverage/node/coverage.json",
    "build-test-coverage": "browserify -t [ browserify-istanbul --ignore **/node_modules/** ] ./test/test-browser.js -o test/new-test-bundle.js -d",
    "coverage-report": "istanbul report --dir coverage/browser --root coverage/browser lcov",
    "check-coverage": "istanbul check-coverage --lines 100 --function 100 --statements 100 --branches 100 coverage/browser/coverage.json",
    "new-dev-server": "./bin/new-dev-server.js",
    "mv-coverage": "mv coverage/coverage.json coverage/browser/coverage.json",
    "new-test-browser": "mkdir -p coverage/browser && ./bin/new-test-browser.js && npm run mv-coverage",
    "new-test-phantomjs": "npm run jshint && npm run build-test-coverage && npm run new-test-browser && npm run coverage-report && npm run check-coverage",
    "REMOVE": "npm run beautify && npm run test && npm run new-test-phantomjs"
  },
  "dependencies": {
    "bcrypt": "^0.8.1",
    "bluebird": "^3.0.2",
    "commander": "^2.9.0",
    "deltadb": "0.0.6",
    "deltadb-common-utils": "0.0.2",
    "deltadb-orm-sql": "0.0.2",
    "express": "^4.13.3",
    "inherits": "^2.0.1",
    "mysql2": "^0.15.8",
    "node-uuid": "^1.4.1",
    "pg": "^4.4.2",
    "socket.io": "^1.3.7",
    "socket.io-client": "^1.3.7"
  },
  "devDependencies": {
    "bcryptjs": "^2.2.1",
    "beautify-proj": "0.0.4",
    "browserify": "^12.0.1",
    "browserify-istanbul": "^0.2.1",
    "chai": "^3.0.0",
    "chai-as-promised": "^5.1.0",
    "copyfiles": "^0.2.1",
    "coveralls": "^2.11.4",
    "es3ify": "^0.1.3",
    "es5-shim": "^4.0.5",
    "events": "^1.1.0",
    "http-server": "^0.8.0",
    "indexeddbshim": "^2.2.1",
    "istanbul": "^0.4.0",
    "js-beautify": "^1.5.5",
    "jshint": "^2.8.0",
    "minimist": "^1.1.1",
    "mkdirp": "^0.5.1",
    "mocha": "^2.2.5",
    "mocha-phantomjs": "^4.0.1",
    "request": "^2.51.0",
    "selenium-standalone": "^4.5.3",
    "testem": "^0.9.2",
    "uglify-js": "^2.4.24",
    "walk": "^2.3.9",
    "watchify": "^3.4.0",
    "wd": "^0.4.0"
  },
  "browser": {
    "crypto": false
  },
  "browserify": {
    "transform": [
      "es3ify"
    ]
  }
}
